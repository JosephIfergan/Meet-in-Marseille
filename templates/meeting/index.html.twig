{% extends 'base.html.twig' %}

{% block title %}Meeting index{% endblock %}

{% block body %}
    <h1>Meeting index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>SousCategorie</th>
                <th>UserMax</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Adresse</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for meeting in meetings %}
            <tr>
                <td>{{ meeting.id }}</td>
                <td>{{ meeting.user_id }}</td>
                <td>{{ meeting.categorie }}</td>
                <td>{{ meeting.sousCategorie }}</td>
                <td>{{ meeting.userMax }}</td>
                <td>{{ meeting.date ? meeting.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ meeting.adresse }}</td>
                <td>{{ meeting.description }}</td>
                <td>
                    <a href="{{ path('meeting_show', {'id': meeting.id}) }}">show</a>
                    <a href="{{ path('meeting_edit', {'id': meeting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('meeting_new') }}">Create new</a>
{% endblock %}
