{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/RegisterStyle.css') }} ">
	<!-- police-->
	<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" rel="stylesheet">

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Inscription MeetInMarseille{% endblock %}


{% block header %}
	<header>
		<nav class="navbar navbar-expand-sm col navbar-light d-flex justify-content-start">
			<a href="{{ path('accueil') }}"><img class="logo-inscription" src="assets/img/logo-white.png" alt="MeetInMarseille"></a>
			
		</nav>
	</header>
{% endblock %}
{% block body %}
		<h3 class="text-center text-white mt-5">{{ messageConfirmation }}
			<a class="text-white" href="{{ path('app_login') }}">{{ messageConfirmation2 }}</a>
		</h3>
	<div id="base_inscription" class="d-flex">
		{% for flashError in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}
		<div id="container" class="container d-flex flex-row flex-wrap justify-content-around align-self-center">	
			<div class="formulaire align-self-center" data-aos="fade-right">
				{{ form_start(registrationForm) }}
				<div class="d-flex flex-row flex-wrap justify-content-center forsexe">
					<p class="jesuis text-white mr-3 display-5">Je suis ...</p>
					{{ form_widget(registrationForm.sexe) }}
				</div>
				<label class="w-100 p-0">
					{{ form_widget(registrationForm.pseudo) }}
				</label>
				<label class="w-100">
					{{ form_widget(registrationForm.email) }}
				</label>
				<label class="w-100">
					{{ form_widget(registrationForm.age) }}
				</label>
				<label class="w-100">
					{{ form_widget(registrationForm.plainPassword) }}
				</label>
				<button type="submit" class="btn d-block font-weight-bold mr-auto ml-auto w-50">{{ button_label|default('Créer mon compte !') }}</button>	
				{{ form_end(registrationForm) }}
				<p class="text-white">Déjà inscrit? <a id="new" class="p-2 text-white text-decoration" href="{{ path('app_login') }}">Se connecter!</a></p>
			</div>
			<div class="aside mt-4">
				<h2 data-aos="fade-up">Rejoins la meilleure communauté de Marseille !</h2>
				<img src="assets/img/friends2.png" alt="welcome" data-aos="fade-left">
			</div>
		</div>
	</div>
{% endblock %}
