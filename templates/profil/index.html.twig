{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block stylesheets %}
	<!-- MON CSS -->
	<link rel="stylesheet" href="{{ asset('assets/css/profilStyle.css') }} ">
{% endblock %}

{% block header %}
	<header" >
		<nav class="d-flex flex-row fixed justify-content-center">
			<a class="p-2 navlogo" href="{{ path('accueil') }}"><img class="logo" src="assets/img/logo.png" alt="MeetInMarseille"></a>
            <a class="align-self-end button-meeting btn p-2 ml-4" href="{{path ('map')}}"><i class="far fa-plus-square fa-2x logo-add mr-2"></i>Creer un Meeting !</a>
			<a class="button-deconnexion btn p-4 align-self-center nav-link m-2 mr-5 " href="{{ path('app_logout') }}"> 
            Se déconnecter <i class="fas fa-sign-out-alt"></i></a>
            </nav>
	</header>
{% endblock %}

{% block body %}

<div id="modif_class1" class="information ">

    <div class="profil bar-profil sticky-top">
    {%if ( app.user.photo == null ) %}
        {%if ( app.user.sexe == 'homme' ) %}
            <img src="assets/img/avatar.png" class="profil-avatar" alt="avatar">
        {%else %}
            <img src="assets/img/avatar-femme.png" class="profil-avatar" alt="avatar">
        {%endif %}
    {%else %}
        <img src="{{ asset('uploads/' ~ app.user.photo ) }}" class="profil-avatar" alt="avatar">
    {%endif %}





        <div class="pseudo">{{ app.user.pseudo }} </div>
        <div class="ita">{{ app.user.age }} ans</div>
        <div class="ita">{{ app.user.email }}</div>
        <div class="ita padd">Marseille 13000</div>

        <nav class="">
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active pad" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Mes Meetings</a>
                <a class="nav-item nav-link pad2" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Mes Informations</a>
            </div>
        </nav>


    </div>
    
    <div class="tab-content marge-body" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">

            <div>
                <h2>Notre code meet</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Publié par</th>
                            <th>Titre meeting</th>
                            <th>Categorie</th>
                            <th>Sous Categorie</th>
                            <th>Participant Max</th>
                            <th>Date</th>
                            <th>Adresse</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                        {% for meeting in app.user.meetings %}
                            {% if date(meeting.date ? meeting.date|date('d-m-Y-H:i') : '') >= date() %} {#POUR LISTER SEULEMENT LES MEETINGS A VENIR #}
                                <tbody>
                            {% else %}
                                <tbody class="bg-secondary">
                            {% endif %}

                            <tr>
                                <td>{{ meeting.user.pseudo ?? 'vide' }}</td>
                                <td>{{ meeting.titre }}</td>
                                <td>{{ meeting.categorie }}</td>
                                <td>{{ meeting.sousCategorie }}</td>
                                <td>{{ meeting.userMax }}</td>
                                <td>{{ meeting.date ? meeting.date|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ meeting.adresse }}</td>
                                <td>{{ meeting.description }}</td>
                                <td>
                                {% if date(meeting.date ? meeting.date|date('d-m-Y-H:i') : '') >= date() %} {#POUR LISTER SEULEMENT LES MEETINGS A VENIR #}
                                    <a class="btn btn-success" href="{{ path('profil_meeting_edit', {'id': meeting.id}) }}">Modifier</a>
                                {% endif %}

                                    <form method="post" action="{{ path('profil_delete', {'id': meeting.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ meeting.id) }}">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">Vous n'avez pas créé de meeting(s)</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div> 
        </div>

        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
        
            <div>
                <h2>Notre code information</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Pseudo</th>
                            <th>Age</th>
                            <th>photo</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>{{ app.user.email }}</td>
                            <td>{{ app.user.pseudo }}</td>
                            <td>{{ app.user.age }}</td>
                            <td>{{ app.user.photo }}</td>
                            <td><a  class="btn btn-success" href="{{ path('profil_user_edit', {'id': app.user.id}) }}">Modifier</a></td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>

    </div>

</div>
<hr>
{% endblock %}
