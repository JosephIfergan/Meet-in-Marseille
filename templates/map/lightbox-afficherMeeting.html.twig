{% block body %}

	<div class="modal fade" id="afficherMeetingModal{{loop.index0}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="pl-3">
							<div class="row category">Meeting crée par :
								{{ meeting.user.pseudo ?? 'vide' }}</div>
							<div class="row category">Catégorie :
								{{ meeting.categorie }}</div>
							<div class="row category">Sous-catégorie :
								{{ meeting.sousCategorie }}</div>
							<div class="row category">Sous-catégorie :
								{{ meeting.userMax }}</div>
							<div class="row datetime">Date et heure :
               {{ meeting.date ? meeting.date|date('Y-m-d H:i:s') : '' }}
							</div>
							<div class="row location">Localisation :
								{{ meeting.adresse }}</div>
						</div>

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-success">Rejoindre !</button>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
