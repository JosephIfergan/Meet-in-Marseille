{% block body %}
	<section class="lightbox-creerMeeting">
		<div class="modal fade" id="creerMeetingModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="meetingModalLabel">Créer un Meeting</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<form>
							<img src="assets/img/avatar.png" class="avatar" alt="avatar">
							<div class="form-group">
								<input type="text" class="form-control" id="inputAddress" placeholder="Titre du Meeting">
							</div>
							<div class="form-group">
								<textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Décris ton Meeting $Pseudo ! " rows="5"></textarea>
							</div>
							<div class="form-group">
								<label>Catégorie</label>
								<select class="form-control">
									<option>Sport</option>
									<option>Culture</option>
									<option>Nature</option>
									<option>Sortie soirée</option>
									<option>Jeux & divertissements</option>
								</select>
							</div>
							<div class="form-group">
								<label>Sous-catégorie</label>
								<select class="form-control" id="exampleFormControlSelect1" required>
									<option>Foot</option>
									<option>Tennis</option>
									<option>Beach Volley</option>
									<option>Natation</option>
									<option>Pétanque</option>
								</select>
							</div>
							<div class="form-group">
								<label>Nombre de participants Max</label>
								<select class="form-control" id="FormControlSelect1">
									<option>2</option>
									<option>3</option>
									<option>4</option>
									<option>5</option>
									<option>6</option>
									<option>7</option>
									<option>8</option>
									<option>9</option>
									<option>10</option>
								</select>
							</div>
							<div class="form-group">
								<input type="text" class="form-control" id="inputAddress" placeholder="Où se passe ton Meeting ?">
							</div>
							<div class="form-group">
								<input type="date" class="form-control" id="date/heure">
							</div>
							<div class="form-group">
								<input type="time" class="form-control" id="date/heure">
							</div>
						</form>
					</div>
					<div class="modal-footer">
						<button type="button" id="valider" class="btn btn">Valider</button>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
