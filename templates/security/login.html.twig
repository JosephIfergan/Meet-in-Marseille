{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/RegisterStyle.css') }} ">
<!-- police-->
<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" rel="stylesheet"> 
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Connexion MeetInMarseille!{% endblock %}

{% block header %}
	<header>
		<nav class="navbar navbar-expand-sm col navbar-light d-flex justify-content-center">
			<a href="{{ path('accueil') }}"><img class="logo-inscription" src="assets/img/logo-white.png" alt="MeetInMarseille"></a>
		</nav>
	</header>
{% endblock %}
{% block body %}
 
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
            <li class="m-auto">
            {% if app.user %}
                <a class="btn btn-primary boutton-connexion align-self-center m-3" href="{{ path('app_logout') }}">Se déconnecter</a>
            {% else %}
                <a class="btn btn-primary boutton-connexion align-self-center m-3" href="{{ path('app_register') }}">S'inscrire</a>
            {% endif %}
            </li>
            <li class="m-auto">
                <a class="btn btn-primary boutton-meeting align-self-center m-2" href="{{ path('map') }}">Voir les meetings<img class="icone-fire ml-1" src="assets/img/icone-fire.png" alt="icone fire"></a>
            </li>
        </ul>
    </div>


    <div class="background-login">
        <div id="base_login" class="pb-5">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                
                {% if app.user %}
                	{# POUR REDIRIGER VERS LA PAGE MEETING APRES 5 SECONDES #}
                    <meta  http-equiv = "refresh"  content = "5;{{ path('map') }}" >
                {% endif %}
                
                {% if app.user %}
                    <h1 class="color-1 text-uppercase text-center display-4">Bienvenue {{ app.user.pseudo }} !</h1>
                    <p class="text-center display-5 text-warning">On te redirige vers les Meetings ...</p>
                {% else %}

                {% endif %}



                
	      <div id="container" class="container d-flex flex-row flex-wrap justify-content-around align-self-center">
          <div class="formulaire align-self-center" data-aos="fade-right">
          

                    <input type="email" value="{{ last_username }}" name="email" placeholder="Votre email" id="inputEmail" class="form-control mt-4 mb-4" required autofocus>
                    <input type="password" name="password" placeholder="Votre mot de passe" id="inputPassword" class="form-control mb-4" required>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="btn btn-primary d-block font-weight-bold mr-auto ml-auto mb-4 w-50" type="submit">Se connecter</button>
                    <a id="new" class="p-2 text-white text-decoration" href="{{ path('app_register') }}">Nouveau ? S'inscrire !</a>
				 <div class="aside mt-4 data-aos="fade-left"">
					<h2 data-aos="fade-down">Ah, te revoilà ! <br> On t'attendait !</h2>
					<img src="assets/img/friends.png" class="friends" alt="welcome">
				</div>
                </div>
                </div>
               
            </form>
            
        </div>
    </div>
{% endblock %}
