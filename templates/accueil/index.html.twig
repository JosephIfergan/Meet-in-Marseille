{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!
{% endblock %}

{% block stylesheets %}
	<!-- MON CSS -->
	<link rel="stylesheet" href="{{ asset('assets/css/AccueilStyle.css') }} ">

{% endblock %}


 {% block header %}
    <header class="container-fluid">
	<div class="row">
	<nav class="navbar navbar-expand-lg col navbar-light">
	<a class="p-2 navlogo" href="{{ path('accueil') }}"><img class="logo" src="assets/img/logo.png" alt="MeetInMarseille"></a>
  <button class="navbar-toggler hidden-lg-up float-xs-sm-right bg-primary" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span><i class="hamburger fas fa-bars"></i></span>
  </button>
  <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="button-inscription btn p-4 align-self-end nav-link mr-4" href="{{ path('inscription') }}">S'inscrire !</a>
      <li class="nav-item">
       <a class="button-connexion btn p-2 align-self-end mr-4" href="{{ path('connexion') }}">Se connecter</a>
      </li>
    </ul>
  </div>
</nav>
</div>
        </header>
    {% endblock %}


{% block body %}

	<div class="slideshow justify-content-center d-flex"><!-- SLIDERS JS ICI -->
    <a class="align-self-end button-meeting btn p-2" href="{{ path('map') }}">Voir les meeting<img class="icone-fire ml-1" src="assets/img/icone-fire.png" alt="icone fire"></a>
	<a class="align-self-end button-meeting btn p-2 ml-4" href="{{ path('map') }}">Comment ça marche ?</a>

	</div>
	<!-- DESCRIPTION RAPIDE ICI -->
	<div class="description d-flex flex-row container-fluid justify-content-center">
		<img src="assets/img/logodescription.png" alt="MeetInMarseille">
		<div class="mt-5">
			<p class="ml-2">est la première plateforme en ligne vous permettant de partager votre temps, vos passions, hobbies et sorties avec les autres.</p>
			<p class="text-center">C'est simple, rapide et gratuit.</p>
		</div>
	</div>


	<!-- COMMENT ÇA MARCHE ? -->


	<section id="fonctionnement">
		<h2 class="text-center p-2">Comment ça marche ?</h2>
		<div class="ccm d-flex flex-row justify-content-around flex-wrap">
			<div class="etape1 flex-fonctionnement">
				<p class="number">&#9312;</p>
				<a class="btn" href="{{ path('inscription') }}">Je m'inscris</a>
				<img src="assets/img/logo1.png" alt="etape1">
			</div>
			<i class="fas fa-long-arrow-alt-right m-auto fa-10x d-flex justify-content-center flex-fonctionnement"></i>
			<div class="etape2 flex-fonctionnement">
				<p class="number">&#9313;</p>
				<a class="btn" href="{{ path('map') }}">Je crée un Meeting</a>
				<p>OU</p>
				<a class="btn" href="{{ path('map') }}">Je rejoins un Meeting</a>
				<img src="assets/img/logo4.png" alt="etape2">
			</div>
			<i class="fas fa-long-arrow-alt-right m-auto fa-10x d-flex justify-content-center flex-fonctionnement"></i>
			<div class="etape3 flex-fonctionnement">
				<p class="number">&#9314;</p>
				<a class="btn" href="{{ path('map') }}">Je rencontre les utilisateurs !</a>
				<img src="assets/img/logo3.png" alt="etape3">
			</div>
		</div>
	</section>

<div class="background-scrolltop">
	<img class="scrollTop" src="assets/img/iconescrolltop.png" alt="etape3">
</div>
{% endblock %}
